<h1>Listing messages</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Msg</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.user.email if message.user.present?  %></td>
        <td><%= message.msg %></td>
        <td><%= link_to 'Show', admin_message_path(message) %></td>
        <td><%= link_to 'Edit', edit_admin_message_path(message) %></td>
        <td><%= link_to 'Destroy', [:admin, message], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

