<h1>Listing messages</h1>
<div class = "hero-unit">
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Msg</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.user.email if message.user.present?  %></td>
        <td><%= message.msg %></td>
        <td><%= link_to 'Show', admin_message_path(message) ,:class=>"btn"%></td>
        <td><%= link_to 'Edit', edit_admin_message_path(message),:class=>"btn" %></td>
        <td><%= link_to 'Destroy', [:admin, message], method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Message', new_admin_message_path,:class=>"btn" %>
